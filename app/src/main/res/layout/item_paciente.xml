<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Nome -->
        <TextView
            android:id="@+id/nomePaciente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Paciente"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- CPF (mascarado) -->
        <TextView
            android:id="@+id/cpfPaciente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="***.123.456-**"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/nomePaciente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/idadePaciente"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"/>

        <!-- Idade (alinhada Ã  direita da linha) -->
        <TextView
            android:id="@+id/idadePaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="34 anos"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/cpfPaciente"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Data de nascimento -->
        <TextView
            android:id="@+id/dataNascimentoPaciente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nasc.: 01/05/1990"
            android:textSize="12sp"
            android:alpha="0.8"
            app:layout_constraintTop_toBottomOf="@id/cpfPaciente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
