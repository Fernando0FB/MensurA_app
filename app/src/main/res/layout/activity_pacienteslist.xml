<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F7FF">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_header_gradient"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btnVoltar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pacientes"
                    android:layout_marginStart="16dp"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edtBuscarPaciente"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_search_input"
                    android:hint="Buscar paciente..."
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="14sp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBuscar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/cor_botoes3"
                    android:text="Buscar"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp"
                    app:iconGravity="textStart"
                    app:iconPadding="4dp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Listagem de Pacientes -->
    <LinearLayout
        android:id="@+id/layoutPacientesHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/cardHeader">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 paciente(s) encontrado(s)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNovoPaciente"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="@color/cor_botoes2"
            android:text="Novo"
            android:textColor="#FFFFFF"
            app:cornerRadius="10dp"
            app:icon="@drawable/ic_add_24"
            app:iconGravity="textStart"
            app:iconPadding="4dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPacientes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/layoutPacientesHeader"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <include layout="@layout/loading_overlay" />
</androidx.constraintlayout.widget.ConstraintLayout>
