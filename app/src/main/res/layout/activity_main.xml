<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.main.MainActivity">

    <!-- Saudação -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá Usuário!"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <!-- Botão Bluetooth -->
    <Button
        android:id="@+id/btnBluetooth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Conectar Bluetooth"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:padding="16dp" />

    <!-- Botão Pacientes -->
    <Button
        android:id="@+id/btnPacientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Listagem de pacientes"
        app:layout_constraintTop_toBottomOf="@id/btnBluetooth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:padding="16dp" />

    <!-- Botão Medições -->
    <Button
        android:id="@+id/btnMedicoes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Listagem de medições"
        app:layout_constraintTop_toBottomOf="@id/btnPacientes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:padding="16dp" />

    <!-- Botão nova medição -->
    <Button
        android:id="@+id/btnNovaMedicao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nova medição"
        app:layout_constraintTop_toBottomOf="@id/btnMedicoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:padding="16dp" />

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
