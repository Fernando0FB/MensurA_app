<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_page_soft">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_gradient"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnHeaderAction"
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:backgroundTint="#1AFFFFFF"
                        android:contentDescription="@string/abc_action_bar_home_description"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/baseline_logout_24"
                        app:iconSize="18dp"
                        app:rippleColor="#33FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bem-vindo(a)"
                    android:textColor="#E6FFFFFF"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvHelloName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Olá Usuário!"
                    android:textColor="#FFFFFFFF"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    tools:ignore="SmallSp" />

                <!-- Cartão de status do Bluetooth -->
                <LinearLayout
                    android:id="@+id/boxBt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_inner_card_transparent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <FrameLayout
                        android:id="@+id/frameBluetooth"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_icon_circle_soft">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:alpha="0.9"
                            android:src="@drawable/ic_bluetooth_24"
                            app:tint="#FFFFFF" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp">

                        <TextView
                            android:id="@+id/tvBtTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dispositivo Bluetooth"
                            android:textColor="#FFFFFFFF"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvBtSub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desconectado"
                            android:textColor="#E0FFFFFF"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnConectar"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minWidth="0dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Conectar"
                        android:textAllCaps="false"
                        app:cornerRadius="12dp"
                        android:backgroundTint="#FFFFFF"
                        android:textColor="#0B0820" />
                </LinearLayout>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="8dp" />

            </LinearLayout>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/cardHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="24dp"
            android:background="@color/background">

            <!-- Título seção -->
            <TextView
                android:id="@+id/tvMenuTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Menu Principal"
                android:textColor="#22324D"
                android:textSize="16sp" />

            <!-- Card: Pacientes -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPacientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                app:strokeColor="#1A22324D"
                app:strokeWidth="1dp"
                android:backgroundTint="@color/light_grey">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            app:tint="@color/cor_botoes1"
                            android:src="@drawable/ic_person_24" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pacientes"
                            android:textColor="#182239"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gerenciar lista de pacientes"
                            android:textColor="#7A8AA0"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Mensurações -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMensuracoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                app:strokeColor="#1A22324D"
                app:strokeWidth="1dp"
                android:backgroundTint="@color/light_grey">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            app:tint="@color/cor_botoes1"
                            android:src="@drawable/ic_list_24" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mensurações"
                            android:textColor="#182239"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver histórico de mensurações"
                            android:textColor="#7A8AA0"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Iniciar Mensuração (desabilitado) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIniciar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:alpha="0.45"
                android:clickable="false"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="#1A22324D"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            app:tint="@color/cor_botoes1"
                            android:src="@drawable/baseline_show_chart_24" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Iniciar Mensuração"
                                android:textColor="#182239"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/chipRequerBt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:background="@drawable/bg_chip_neutral"
                                android:text="Requer Bluetooth"
                                android:textColor="#6B7280"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Conecte o dispositivo Bluetooth primeiro"
                            android:textColor="#8A97A8"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/loading_overlay" />

</androidx.constraintlayout.widget.ConstraintLayout>
